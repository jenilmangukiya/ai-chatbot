generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Chatbot {
  id             String   @id @default(uuid()) // Unique ID for each chatbot
  name           String // Chatbot name
  knowledge      String // Predefined knowledge base (can be a large text field)
  createdAt      DateTime @default(now()) // Timestamp when chatbot is created
  updatedAt      DateTime @updatedAt // Auto-updates on modification
  themeConfig    Json // Theme configuration stored as JSON
  starterMessage String // Initial greeting message
  openAiApiKey   String // API key for OpenAI integration
  botLogo        String? // URL for bot logo image (optional)
}
